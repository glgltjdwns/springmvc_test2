<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.junefw.infra.modules.code.CodeMpp"> <!-- 지금 파일 위치 지정 -->

    <resultMap id="resultMapObj" type="com.junefw.infra.modules.code.Code"></resultMap> <!-- 결과 객체 지정 -->


 	<select id="selectList" resultMap="resultMapObj">
		SELECT
			a.ifcdSeq
		    , a.ifcdName
		    , a.ifcdDelNy
		FROM
			infrCode a
		WHERE 1=1
			and ifcdDelNy = 0
	</select>


	<insert id="insert">
		INSERT INTO infrCode (
			ifcdName
			,ifcdDelNy
		) VALUES (
			#{ifcdName}
			,0
		)
	</insert>

	<select id="selectOne" resultMap="resultMapObj">
		SELECT
			a.ifcdSeq
		    , a.ifcdName
		    , a.ifcdDelNy
		FROM
			infrCodeGroup a
		WHERE 1=1
			AND ifcdSeq = #{ifcdSeq}
	</select>
	
		
	<update id="update">
		UPDATE infrCode SET
			ifcdName = #{ifcdName}
		WHERE 1=1
			AND ifcdSeq = #{ifcdSeq}
	</update>
	
